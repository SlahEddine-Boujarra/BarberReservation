{% extends 'base.html.twig' %}

{% block title %}Create Barber Profile{% endblock %}

{% block body %}
<div class="container" style="max-width: 600px; margin-top: 3rem;">
    <h1 class="mb-4">ðŸ’ˆ Create Your Barber Profile</h1>
    <p class="mb-5 text-secondary">Please provide your shop details to start managing reservations. This links your account to your shop.</p>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning">{{ message }}</div>
    {% endfor %}

    {{ form_start(barberForm) }}
        <div class="mb-3">
            {{ form_label(barberForm.name) }}
            {{ form_widget(barberForm.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(barberForm.name) }}
        </div>
        <div class="mb-3">
            {{ form_label(barberForm.email) }}
            {{ form_widget(barberForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(barberForm.email) }}
        </div>
        <div class="mb-3">
            {{ form_label(barberForm.phone) }}
            {{ form_widget(barberForm.phone, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(barberForm.phone) }}
        </div>
        <div class="mb-4">
            {{ form_label(barberForm.location) }}
            {{ form_widget(barberForm.location, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(barberForm.location) }}
        </div>

        <button type="submit" class="btn btn-primary w-100">Create Profile</button>
    {{ form_end(barberForm) }}
</div>
{% endblock %}