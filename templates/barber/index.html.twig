{% extends 'base.html.twig' %}

{% block title %}Barbers Directory - Fresha{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .barbers-container {
        max-width: 1200px;
        margin: 3rem auto;
        padding: 0 2rem;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .header h1 {
        font-size: 2rem;
        color: #000;
    }

    .btn-new {
        padding: 0.8rem 1.5rem;
        background: #000;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s;
    }

    .btn-new:hover {
        background: #333;
        transform: translateY(-2px);
    }

    .barbers-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2rem;
    }

    .barber-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

    .barber-card:hover {
        transform: translateY(-5px);
    }

    .barber-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .barber-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
        font-weight: bold;
    }

    .barber-info h3 {
        font-size: 1.3rem;
        color: #000;
        margin-bottom: 0.3rem;
    }

    .barber-location {
        color: #666;
        font-size: 0.9rem;
    }

    .barber-details {
        margin: 1rem 0;
        padding: 1rem 0;
        border-top: 1px solid #eee;
        border-bottom: 1px solid #eee;
    }

    .detail-row {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
        color: #555;
        font-size: 0.95rem;
    }

    .barber-description {
        color: #666;
        font-size: 0.95rem;
        line-height: 1.5;
        margin: 1rem 0;
    }

    .barber-actions {
        display: flex;
        gap: 0.5rem;
    }

    .btn {
        flex: 1;
        padding: 0.7rem;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s;
        font-size: 0.9rem;
    }

    .btn-view {
        background: #000;
        color: white;
    }

    .btn-view:hover {
        background: #333;
    }

    .btn-edit {
        background: #4ecdc4;
        color: white;
    }

    .btn-edit:hover {
        background: #45b7af;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 16px;
    }

    .empty-state h2 {
        font-size: 1.5rem;
        color: #666;
        margin-bottom: 1rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="barbers-container">
    <div class="header">
        <h1>‚úÇÔ∏è Barbers Directory</h1>
        {% if is_granted('ROLE_BARBER') %}
            <a href="{{ path('app_barber_new') }}" class="btn-new">+ Add New Barber</a>
        {% endif %}
    </div>

    {% if barbers|length > 0 %}
        <div class="barbers-grid">
            {% for barber in barbers %}
                <div class="barber-card">
                    <div class="barber-header">
                        <div class="barber-avatar">
                            {{ barber.name|slice(0, 2)|upper }}
                        </div>
                        <div class="barber-info">
                            <h3>{{ barber.name }}</h3>
                            <div class="barber-location">üìç {{ barber.location }}</div>
                        </div>
                    </div>

                    <div class="barber-details">
                        <div class="detail-row">
                            üìß {{ barber.email }}
                        </div>
                        <div class="detail-row">
                            üì± {{ barber.phone }}
                        </div>
                    </div>


                    <div class="barber-actions">
                        <a href="{{ path('app_barber_show', {'id': barber.id}) }}" class="btn btn-view">View Details</a>
                        {% if is_granted('ROLE_BARBER') and app.user == barber.user %}
                            <a href="{{ path('app_barber_edit', {'id': barber.id}) }}" class="btn btn-edit">Edit</a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <h2>No barbers found</h2>
            <p>Be the first to add your barber shop!</p>
            {% if is_granted('ROLE_BARBER') %}
                <a href="{{ path('app_barber_new') }}" class="btn-new" style="display: inline-block; margin-top: 1rem;">+ Add New Barber</a>
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}