{# templates/security/login.html.twig #}
{% extends 'base_auth.html.twig' %}

{% block title %}Log in - Fresha{% endblock %}

{% block stylesheets %}
    {{ parent() }} {# <--- CRITICAL: Loads navbar CSS #}
    <style>
        .login-container {
            background: white;
            padding: 3rem;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            max-width: 450px;
            width: 100%;
        }

        .logo { text-align: center; font-size: 2rem; font-weight: bold; margin-bottom: 2rem; color: #000; }
        h1 { text-align: center; font-size: 1.8rem; margin-bottom: 2rem; color: #000; }
        .form-group { margin-bottom: 1.5rem; }
        
        label { display: block; margin-bottom: 0.5rem; font-weight: 500; color: #333; }
        input { width: 100%; padding: 0.9rem; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 1rem; transition: border-color 0.3s; }
        input:focus { outline: none; border-color: #000; }
        
        .error { background: #fee; color: #c33; padding: 0.8rem; border-radius: 8px; margin-bottom: 1rem; border-left: 4px solid #c33; }
        
        .btn-submit { /* Renamed to avoid conflict with nav .btn */
            width: 100%; padding: 1rem; background: #000; color: white; border: none; border-radius: 8px; font-size: 1rem; font-weight: 600; cursor: pointer; transition: all 0.3s; 
        }
        .btn-submit:hover { background: #333; transform: translateY(-2px); }

        .register-link { text-align: center; margin-top: 1.5rem; color: #666; }
        .register-link a { color: #000; font-weight: 600; text-decoration: none; }
        .register-link a:hover { text-decoration: underline; }
        
        .back-home { text-align: center; margin-top: 1rem; }
        .back-home a { color: #666; text-decoration: none; }
        .back-home a:hover { color: #000; }
    </style>
{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="logo">fresha</div>
        <h1>Log in to your account</h1>

        {% if error %}
            <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post">
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus placeholder="Enter your email">
            </div>

            <div class="form-group">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" autocomplete="current-password" required placeholder="Enter your password">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn-submit" type="submit">Sign in</button>
        </form>

        <div class="register-link">
            Don't have an account? <a href="{{ path('app_register') }}">Register here</a>
        </div>
    </div>
{% endblock %}