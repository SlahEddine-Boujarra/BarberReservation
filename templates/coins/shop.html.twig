{% extends 'base.html.twig' %}

{% block title %}Coins Shop - Fresha{% endblock %}

{% block stylesheets %}
     {{ parent() }}
<style>

    .coins-shop-container {
        max-width: 1200px;
        margin: 3rem auto;
        padding: 0 2rem;
    }

    .shop-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .shop-header h1 {
        font-size: 2.5rem;
        color: #000;
        margin-bottom: 1rem;
    }

    .shop-header p {
        font-size: 1.2rem;
        color: #666;
    }

    .current-balance {
        background: linear-gradient(135deg, #ffd700, #ffed4e);
        padding: 2rem;
        border-radius: 16px;
        text-align: center;
        margin-bottom: 3rem;
        box-shadow: 0 4px 20px rgba(255, 215, 0, 0.3);
    }

    .current-balance h2 {
        font-size: 1.2rem;
        color: #555;
        margin-bottom: 0.5rem;
    }

    .current-balance .amount {
        font-size: 3rem;
        font-weight: bold;
        color: #000;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    .packages-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .package-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
    }

    .package-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    }

    .package-card.popular::before {
        content: '‚≠ê POPULAR';
        position: absolute;
        top: 1rem;
        right: -2rem;
        background: #ff6b6b;
        color: white;
        padding: 0.3rem 3rem;
        transform: rotate(45deg);
        font-size: 0.75rem;
        font-weight: bold;
    }

    .package-card.best-value::before {
        content: 'üíé BEST VALUE';
        position: absolute;
        top: 1rem;
        right: -2.5rem;
        background: #4ecdc4;
        color: white;
        padding: 0.3rem 3rem;
        transform: rotate(45deg);
        font-size: 0.75rem;
        font-weight: bold;
    }

    .coin-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .package-amount {
        font-size: 2.5rem;
        font-weight: bold;
        color: #000;
        margin-bottom: 0.5rem;
    }

    .package-coins {
        color: #666;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
    }

    .package-price {
        font-size: 2rem;
        font-weight: bold;
        color: #000;
        margin-bottom: 1.5rem;
    }

    .package-features {
        text-align: left;
        margin-bottom: 1.5rem;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .package-features li {
        margin-bottom: 0.5rem;
        color: #555;
        font-size: 0.9rem;
    }

    .buy-btn {
        width: 100%;
        padding: 1rem;
        background: #000;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .buy-btn:hover {
        background: #333;
        transform: translateY(-2px);
    }

    .info-section {
        background: white;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .info-section h2 {
        font-size: 1.8rem;
        margin-bottom: 1rem;
        color: #000;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 1.5rem;
    }

    .info-card {
        padding: 1.5rem;
        background: #f8f9fa;
        border-radius: 12px;
        text-align: center;
    }

    .info-card .icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .info-card h3 {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
        color: #000;
    }

    .info-card p {
        color: #666;
        font-size: 0.95rem;
    }
</style>
{% endblock %}

